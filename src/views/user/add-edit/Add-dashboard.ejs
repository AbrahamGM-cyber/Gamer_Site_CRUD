    <body>
        <main class="main">
            <!--===================================HOME======================================-->
            <section class="home" id="juegos">
                <div class="dashboard_bg " id="home">
                    <div class="home_text">
                        <h1 class="section_title_head-dashboard ">Crea Tu juego</h1>
                        <p class="section_subtitle_head ">Crea Tu juego</p>
